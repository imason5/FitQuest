<div class="container">
  <h1>Workout</h1>
  <form id="searchForm">
    <div class="mb-3">
      <label for="search" class="form-label">Search for exercises</label>
      <input
        type="text"
        class="form-control"
        id="search"
        name="search"
        placeholder="Enter exercise name"
      />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
  <hr />
  <h2>Search Results</h2>
  <div id="searchResults"></div>
  <hr />
  <h2>Current Workout</h2>
  <div id="currentWorkout" class="row"></div>
  <button id="finish-workout">Finish Workout</button>
  <div id="workoutExercises"></div>
</div>

<!-- Exercise Card Template -->
<template id="exercise-card-template">
  <div class="col-md-6 mb-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"></h5>
        <div class="mb-3">
          <div class="row">
            <div class="col">Set</div>
            <div class="col">kg</div>
            <div class="col">Reps</div>
            <div class="col"></div>
          </div>
          <div class="sets-row">
            <!-- First set row with input fields -->
            <div class="row mb-3 set-row">
              <div class="col">1</div>
              <div class="col">
                <input
                  class="form-control weight-input"
                  type="number"
                  step="0.5"
                  placeholder="kg"
                />
              </div>
              <div class="col">
                <input
                  class="form-control reps-input"
                  type="number"
                  placeholder="reps"
                />
              </div>
              <div class="col"></div>
            </div>
          </div>
        </div>
        <button class="btn btn-primary add-set-button">Add Set</button>
      </div>
    </div>
  </div>
</template>

<script src="/js/workout.js"></script>

<script src="/js/exerciseCard.js"></script>
